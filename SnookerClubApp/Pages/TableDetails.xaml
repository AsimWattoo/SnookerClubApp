                                                   VerticalAlignment="Center"/>

                                        <Border Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="0 20 0 0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">

                                            <StackPanel Orientation="Horizontal">

                                                <Border Background="White"
                                                        Width="100"
                                                        Padding="0 3"
                                                        Margin="5 0"
                                                        CornerRadius="10">
                                                    <TextBlock FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center">
                                                        Edit
                                                    </TextBlock>
                                                </Border>

                                                <Border Background="#fe5f62"
                                                        Margin="5 0"
                                                        Width="100"
                                                        Padding="0 3"
                                                        CornerRadius="10">
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               Foreground="White">
                                                        Delete
                                                    </TextBlock>
                                                </Border>

                                            </StackPanel>
                                            
                                        </Border>-->

                                    </Grid>
                                </Border>
                                
                            </StackPanel>
                        </Border>
                        
                    </Grid>
                </Border>

            </Grid>
        </StackPanel>
        
    </Border>
</local:BasePage>
